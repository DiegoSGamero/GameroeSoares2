<div class="container user-profile">
  <div class="card-profile">
    <div class="user-name mb-3">
      <h1 class="text-center" style="color: #1c301e;"><%= @user.full_name.split.map(&:capitalize).join(' ') %></h1>
    </div>
    <div class="user-infos">
      <p class="profile-item">Endere√ßo: <%= @user.address %></p>
      <% if @user.fantasy_name.present? %>
        <p class="profile-itemr">Nome Fantasia: <%= @user.fantasy_name %></p>
      <% end %>
      <% if @user.CNPJ.present? %>
        <p class="profile-itemr">CNPJ: <%= @user.CNPJ %></p>
      <% end %>
      <p class="profile-item">CPF: <%= @user.CPF %></p>
      <p class="profile-item">RG: <%= @user.RG %></p>
      <p class="profile-item">Telefone: <%= @user.phone_number %></p>
      <p class="profile-item">Categoria: <%= @user.role %></p>
      <p class="profile-item">Email: <%= @user.email %></p>
    </div>
  </div>
</div>
